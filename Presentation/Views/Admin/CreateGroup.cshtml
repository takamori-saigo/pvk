<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Точка Сбора - Оценка стажеров</title>
  <link href="https://fonts.googleapis.com/css2?family=Kelly+Slab&family=Poppins&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="~/css/Group.css" />
</head>
<body>
  <div class="layout" style="margin-left:318px;">
    <!-- Левая панель -->
    <aside class="sidebar">
      <div class="logo">Точка Сбора</div>
      <div class="sidebar-buttons">
        <a class="sidebar-btn" asp-action="Index" asp-controller="Home">Оценка ПВК</a>
        <button class="sidebar-btn"><a style="all:unset;" asp-action="AdminPanel" asp-controller="Admin">Стажёры</a></button>
        <button class="sidebar-btn"><a style="all:unset;" asp-action="Group" asp-controller="Admin">Группа</a></button>
      </div>
    </aside>

    <!-- Верхняя панель -->
    <header class="top-bar">
      <form class="search-bar">
        <input type="text" placeholder="Поиск" />
        <button type="submit" class="search-btn" tabindex="-1">
          <svg width="20" height="20" fill="none" viewBox="0 0 20 20">
            <circle cx="9" cy="9" r="7.5" stroke="#BDBDBD" stroke-width="1.5"/>
            <path d="M16 16L13.2 13.2" stroke="#BDBDBD" stroke-width="1.5" stroke-linecap="round"/>
          </svg>
        </button>
      </form>
      <div class="ellipse1">
        <div class="ellipse34">
          <div class="avatar-image"></div>
        </div>
      </div>
    </header>

    <div class="content-wrapper">
      <main class="main-content">
        <div class="groups-block">
          <h2>Ваши группы</h2>
          <div class="group-list">
            <div class="group-item">
              <span class="group-name">ПВК1</span>
              <span class="group-members">Участников: 1</span>
            </div>
            <div class="group-item">
              <span class="group-name">ОМТ</span>
              <span class="group-members">Участников: 0</span>
            </div>
          </div>
          <button class="add-group-btn" id="openModalBtn">Добавить</button>
        </div>
        <!-- содержимое -->

        <!-- Modal Overlay and Window -->
        <div id="modalOverlay" style="display:none;">
          <div class="custom-modal">
            <form asp-controller="Admin" asp-action="CreateGroup" method="post">
                <h2 class="modal-title">Группа</h2>
                <input type="text" id="groupName" name="nameOfGroup" class="modal-input" placeholder="Название" />
                <div class="modal-btn-row">
                  <button type="button" class="modal-btn cancel" id="closeModalBtn">Отмена</button>
                  <button type="submit" class="modal-btn add">Создать</button>
                </div>
            </form>
          </div>
        </div>
        <!-- /Modal -->
      </main>
    </div>
  </div>
</body>
<style>
  #modalOverlay {
    position: fixed;
    top: 0; left: 0; width: 100vw; height: 100vh;
    background: rgba(0,0,0,0.4);
    z-index: 1000;
    display: none;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .custom-modal {
    background: #fff;
    border-radius: 16px;
    max-width: 400px;
    margin: 0;
    padding: 32px 24px 24px 24px;
    position: relative;
    box-shadow: 0 2px 16px rgba(0,0,0,0.2);
    display: flex;
    flex-direction: column;
    align-items: stretch;
  }
  .modal-title {
    font-family: 'Poppins', 'Arial', sans-serif;
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 20px;
  }
  .modal-input {
    background: #F2F2F2;
    border: none;
    border-radius: 12px;
    padding: 18px 16px;
    font-size: 1.2rem;
    margin-bottom: 28px;
    outline: none;
    font-family: inherit;
  }
  .modal-btn-row {
    display: flex;
    gap: 16px;
    justify-content: space-between;
  }
  .modal-btn {
    flex: 1 1 0;
    background: #181818;
    color: #fff;
    border: none;
    border-radius: 14px;
    padding: 16px 0;
    font-size: 1.1rem;
    font-family: inherit;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s;
  }
  .modal-btn.cancel {
    margin-right: 8px;
  }
  .modal-btn.add {
    margin-left: 8px;
  }
  .modal-btn:active {
    background: #333;
  }
</style>
<script>
  // Simple modal logic
  document.getElementById('openModalBtn').onclick = function() {
    document.getElementById('modalOverlay').style.display = 'block';
  };
  document.getElementById('closeModalBtn').onclick = function() {
    document.getElementById('modalOverlay').style.display = 'none';
  };
  document.getElementById('modalOverlay').onclick = function(e) {
    if (e.target === this) this.style.display = 'none';
  };
</script>
</html>
