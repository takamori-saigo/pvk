@model IEnumerable<Core.User>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Добавление в группу</title>
    <link href="https://fonts.googleapis.com/css2?family=Zen+Kaku+Gothic+Antique:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Authorization.css">
</head>
<body>
<div class="container">
    <h2>Добавить в группу участника</h2>
    
    <!-- Форма поиска -->
    <div class="search-container mb-3">
        <div class="input-group">
            <input type="text" id="searchInput" class="form-control" placeholder="Поиск по логину">
            <button type="button" class="btn btn-primary" onclick="searchUsers()">Найти</button>
            <button type="button" class="btn btn-secondary" onclick="resetSearch()">Сбросить</button>
        </div>
    </div>

    <!-- Контейнер для таблицы пользователей -->
    <div id="usersTableContainer">
        @await Html.PartialAsync("_UsersTablePartial", Model)
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function searchUsers() {
        const searchTerm = $('#searchInput').val();
        
        $.post('/Admin/FindInter', { loginOfUser: searchTerm }, function(data) {
            $('#usersTableContainer').html(data);
        }).fail(function() {
            alert('Ошибка при поиске пользователей');
        });
    }

    function resetSearch() {
        $.get('/Admin/AdminPanel', function(data) {
            $('#usersTableContainer').html($(data).find('#usersTableContainer').html());
            $('#searchInput').val('');
        });
    }

    // Остальные функции (loadGroups, addToGroup) остаются без изменений
</script>
</body>
</html>