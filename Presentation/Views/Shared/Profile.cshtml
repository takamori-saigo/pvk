@model Core.User
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Профиль</title>
    <style>
        .field-group {
            margin-bottom: 15px;
        }
        .edit-form {
            display: inline-block;
            margin-left: 10px;
        }
        .edit-form input {
            padding: 3px;
            margin-right: 5px;
        }
    </style>
</head>
<body>
<h2>Профиль</h2>

<div class="field-group">
    <strong>Почта:</strong> @Model.Email
    <form class="edit-form" asp-action="UpdateProfileField" method="post">
        <input type="hidden" name="field" value="email">
        <input type="text" name="value" placeholder="Новый email">
        <button type="submit">Изменить</button>
    </form>
</div>

<div class="field-group">
    <strong>Логин:</strong> @Model.Login
    <form class="edit-form" asp-action="UpdateProfileField" method="post">
        <input type="hidden" name="field" value="login">
        <input type="text" name="value" placeholder="Новый логин">
        <button type="submit">Изменить</button>
    </form>
</div>

<div class="field-group">
    <strong>Имя:</strong> @(Model.Name ?? "не указано")
    <form class="edit-form" asp-action="UpdateProfileField" method="post">
        <input type="hidden" name="field" value="name">
        <input type="text" name="value" placeholder="Новое имя">
        <button type="submit">Изменить</button>
    </form>
</div>

<div class="field-group">
    <strong>Фамилия:</strong> @(Model.Surname ?? "не указано")
    <form class="edit-form" asp-action="UpdateProfileField" method="post">
        <input type="hidden" name="field" value="surname">
        <input type="text" name="value" placeholder="Новая фамилия">
        <button type="submit">Изменить</button>
    </form>
</div>

</body>
</html>